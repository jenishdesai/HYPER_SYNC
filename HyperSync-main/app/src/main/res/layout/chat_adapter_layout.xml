<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/oppolayout"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp">

            <TextView
                android:id="@+id/oppoMessage"
                android:padding="20dp"
                android:background="@drawable/opo_message_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This opponent Message..."
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/oppoMsgTime"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-08-2021 05:12 PM"/>


        </LinearLayout>

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:id="@+id/melayout"
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp">

            <TextView
                android:id="@+id/meMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/my_msg_back"
                android:padding="20dp"
                android:text="This is My Message..."
                android:textColor="@color/black" />

            <TextView
                android:layout_gravity="end"
                android:id="@+id/meMsgTime"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-08-2021 05:12 PM"/>


        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>